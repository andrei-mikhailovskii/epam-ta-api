<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ApiTrelloTests" verbose="1">
    <test name="BoardLifecycleTest">
        <groups>
            <run>
                <include name = "board"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.tc.tests.BoardLifecycleTest"/>
        </classes>
    </test>
    <test name="ListLifecycleTest">
        <groups>
            <run>
                <include name = "list"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.tc.tests.ListLifecycleTest"/>
        </classes>
    </test>
    <test name="CardLifecycleTest">
        <groups>
            <run>
                <include name = "cards"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.tc.tests.CardLifecycleTest"/>
        </classes>
    </test>
</suite>